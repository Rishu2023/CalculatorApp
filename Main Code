    <div class="Calculator">
        <div class="Display">
            <input type="text" id="result" readonly>
        </div>
        <div class="Buttons">
            <button onclick="clearResult('C')">C</button> 
            <button onclick="Number('1')">1</button> 
            <button onclick="Number('2')">2</button> 
            <button onclick="Number('3')">3</button> 
            <button onclick="Number('4')">4</button> 
            <button onclick="Number('5')">5</button> 
            <button onclick="Number('6')">6</button> 
            <button onclick="Number('7')">7</button> 
            <button onclick="Number('8')">8</button> 
            <button onclick="Number('9')">9</button> 
            <button onclick="Number('0')">0</button> 
            <button onclick="Number('+')">+</button> 
            <button onclick="Number('-')">-</button> 
            <button onclick="Number('*')">*</button> 
            <button onclick="Number('/')">/</button> 
            <button onclick="Number('.')">.</button> 
            <button onclick="CalculateResult('=')">=</button> 
            <button onclick="CalculateSquareRoot()">âˆš</button> 
            <button onclick="CalculateSquare()">^</button> 
            <button onclick="PlayAnimation()">ðŸŽ‰</button>
        </div>
    </div>

    <script>
        function Number(value) {
            document.getElementById('result').value += value;
        }
        
        function clearResult() {
            document.getElementById('result').value = '';
            
        }
        
        function CalculateResult() {
            try {
                document.getElementById('result').value = eval(document.getElementById('result').value);
            } catch (error) {
                document.getElementById('result').value = 'ERROR!!!';
            }
        }
        
        function CalculateSquareRoot() {
            const inputValue = parseFloat(document.getElementById('result').value);
            if (!isNaN(inputValue) && inputValue >= 0) {
                document.getElementById('result').value = Math.sqrt(inputValue).toFixed(2);
            } else {
                document.getElementById('result').value = 'ERROR!!!';
            }
        }
        
        function CalculateSquare() {
            const inputValue = parseFloat(document.getElementById('result').value);
            if (!isNaN(inputValue)) {
                document.getElementById('result').value = (inputValue * inputValue).toFixed(2);
            } else {
                document.getElementById('result').value = 'ERROR!!!';
            }
        }
        function PlayAnimation() {
            alert("ðŸŽ‰ CONGRATULATIONS!!!");
        }
    </script>
